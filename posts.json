---
layout: null
---

{

{%- assign topstart = true -%}
{%- for c in site.categories -%}
    {%- assign istop = false -%}
    {%- for p in c[1] -%}
        {%- if p.categories[0] == c[0] -%}
            {%- assign istop = true -%}
            {%- break -%}
        {%- endif -%}
    {%- endfor -%}    

    {%- if istop -%}
        {%- if topstart -%}
            {%- assign topstart = false -%}
        {%- else -%}
            ,
        {%- endif -%}
    "{{ c[0] }}": {
        {%- assign topn = false -%}
        {%- for n in site.data.cat -%}
            {%- if n[0] == c[0] -%}
                {%- assign topn = true -%}
        "n": "{{ n[1] }}"
            {%- endif -%}
        {%- endfor -%}
        {%- assign innerstart = true -%}
        {%- for ci in site.categories -%}
            {%- assign isinner = false -%}
            {%- for pi in ci[1] -%}
                {%- if pi.categories[0] == c[0] and pi.categories[1] == ci[0] -%}
                    {%- assign isinner = true -%}
                    {%- break -%}
                {%- endif -%}
            {%- endfor -%}    
        
            {%- if isinner -%}
                {%- if innerstart -%}
                    {%- assign innerstart = false -%}
                    {%- if topn -%}
                    ,
                    {%- endif -%}
        "i": {
                {%- else -%}
                    ,
                {%- endif -%}
            "{{ ci[0] }}": {
                {%- assign innern = false -%}
                {%- for n in site.data.cat -%}
                    {%- if n[0] == ci[0] -%}
                        {%- assign innern = true -%}   
                "n": "{{ n[1] }}"
                    {%- endif -%}
                {%- endfor -%}
    
                {%- assign liststart = true -%}
                {%- for pi in ci[1] -%}
                    {%- if pi.categories[0] == c[0] and pi.categories[1] == ci[0] -%}
                        {%- if liststart -%}
                            {%- assign liststart = false -%}
                            {%- if innern -%}
                            ,
                            {%- endif -%}
                "i": [
                        {%- else -%}
                            ,
                        {%- endif -%}
                    { "t": "{{ pi.title }}",  "u": "{{ pi.url}}" }
                    {%- endif -%}
                {%- endfor -%} 
                {%- unless liststart -%}
                ]
                {%- endunless -%}
            }
            {%- endif -%}
        {%- endfor -%}
        {%- unless innerstart -%}
        }
        {%- endunless -%}
    }
    {%- endif -%}
{%- endfor -%}

}